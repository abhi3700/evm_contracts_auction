{
  "name": "evm-auction-contract",
  "version": "0.0.1",
  "description": "An auction-contract for EVM chains",
  "main": "index.js",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "contract-size": "hardhat size-contracts",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp build --network hardhat",
    "deploy-local": "hardhat run --network localhost deployment/deploy.ts",
    "deploy-goerli": "hardhat run --network goerli deployment/deploy.ts",
    "deploy-eth": "hardhat run --network eth deployment/deploy.ts",
    "flatten": "hardhat flatten",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier && yarn run prettier:list-different",
    "lint:sol": "yarn solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\" --fix",
    "lint:ts": "yarn eslint --config .eslintrc.js --ignore-path ./.eslintignore --ext .js,.ts . --fix",
    "prettier": "prettier --config .prettierrc.json --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:list-different": "prettier --config .prettierrc.json --list-different \"**/*.{js,json,md,sol,ts}\"",
    "test": "hardhat test --network hardhat",
    "typechain": "hardhat typechain",
    "verify": "hardhat verify --network",
    "verify-rinkeby": "hardhat verify --network rinkeby",
    "verify-bsctestnet": "hardhat verify --network bsctestnet"
  },
  "files": [
    "/contracts",
    "/deployment",
    "/scripts",
    "/test"
  ],
  "author": "abhi3700",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.7.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "chai": "^4.3.4",
    "dotenv": "^16.0.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.6.9",
    "hardhat": "^2.9.9",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.4",
    "leveldown": "^6.1.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.8.2",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4",
    "yarn-upgrade-all": "^0.7.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.0"
  }
}
